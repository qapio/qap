
class TailwindProps {
  Input: String
  Output: String
  Content: List<String> = List()
}

open class ComponentProps {
  fixed Namespace: String = getClass().toString().split("#").first
  fixed Type: String = getClass().toString().split("#").last
  Id: String?
  ClassNames: List<String>
}

class Jsx extends ComponentProps {
  Path: String
}

open class Uri extends ComponentProps {
  Path: String
}

typealias ComponentsType = Mapping<String, ComponentProps | Any>

class Page {
  Label: String?
  Icon: String
  Url: String
}

typealias PagesType = Mapping<String, Page>

class Props {
  Tailwind: TailwindProps?
  Index: String = "/"
  Components: ComponentsType
  Pages: PagesType
  Stylesheets: List<String(endsWith(".css"))> = List()
}