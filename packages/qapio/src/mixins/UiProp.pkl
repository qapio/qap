
class TailwindProps {
  Input: String?
  Output: String?
  Content: List<String> = List()
}

open class Component {
  fixed Namespace: String = getClass().toString().split("#").first
  fixed Type: String = getClass().toString().split("#").last
  Class: List<String>
  Id: String?
  Children: List<Component | Any>
  Stylesheets: List<String>
}

class Container extends Component {

}

class Jsx extends Component {
  Path: String
}

open class Uri extends Component {
  Path: String
}

typealias ComponentsType = Mapping<String, Component | Any>

class Page {
  Label: String?
  Icon: String
  Url: String
}

class NavItem {
  Name: String
  Endpoint: String
  Icon: String?
}

typealias PagesType = Mapping<String, Page>
typealias NavType = Mapping<String, NavItem>

class Props {
  Tailwind: TailwindProps?
  Index: Component | Any = ""
  Components: ComponentsType
  Pages: PagesType
  Navigation: NavType
  Stylesheets: List<String(endsWith(".css"))> = List()
}